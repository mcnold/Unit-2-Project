<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 25%">
    <h1>Want to learn a new deck?</h1>
    <h3> Add new cards here.</h3>
    <h5>
    <form action="/card" method="POST">
      <input class="u-full-width" type="text" name="deck" placeholder="Tarot Deck Name"/> <br/>
      <input class="u-full-width" type="text" name="type" placeholder="Major or Minor"/> <br/>
      <input class="u-full-width" type="text" name="name" placeholder="Add Card Name"/> <br/>
      <input class="u-full-width" type="text" name="img" placeholder="Add Image Link"/> <br/>
      <input class="u-full-width" type="text" name="value" placeholder="Add Number Value"/> <br/>
      <input class="u-full-width" type="text" name="value_int" placeholder="Add Deck Position"/> <br/>
      <input class="u-full-width" type="text" name="suit" placeholder="Add Tarot Suit" /> <br/>
      <input class="u-full-width" type="text" name="meaning_up" placeholder="Add Upright Meaning" /> <br/>
      <input class="u-full-width" type="text" name="meaning_rev" placeholder="Add Reversed Meaning" /> <br/>
      <input class="u-full-width" type="text" name="desc" placeholder="Add Card Description" /><br/>
      <input type="submit" value="Create Card" />
    </form>
    </h5>
    <a href="/card">Back to Index</a>