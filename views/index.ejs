<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 25%">
        <h3>The Cards of the Sacred Tarot</h3>
        <ul>
          <% for (let i = 0; i < card.length; i++) { %>
            <li>
                <link rel="icon" type="image/jpeg" href="<%=card[i].img%>">
                <a href="/card/<%=card[i].id%>"><%=card[i].deck%>: <%=card[i].name %> </a>
                <form action="/card/<%= card[i].id %>?_method=DELETE" method="POST">
                  <input type="submit" value="Delete">
                </form>
            </li>
            <% } %>
        </ul>
        <a href="/user/myStudyList">My Study Resources</a>
        <a href="/card/new">Add a Card to Study</a>
        <a href="/user/signout">Sign Out</a>
      </div>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>