<%- include('./partials/header.ejs') %>
<div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 25%">
        <h1>Edit Your Account.</h1>
            <form action="/user/<%= user.id %>?_method=PUT" method="POST">
                Username: 
                <br> 
                <input
                type="text"
                name="username"
                value="<%= user.username %>"
                /><br/>
                Password:  
                <br>
                <input
                type="password"
                value="<%= user.password %>"
                /><br/>
                Verify Password:
                <br>
                <input
                type="password"
                value="<%= user.verifyPassword %>"
                /><br/>
                <br>
                <h4>User Information</h4>
                
                <input 
                type="text" 
                name="firstName" 
                value="<%= user.firstName %>"
                /> <br/>
                 
                <input 
                type="text" 
                name="lastName" 
                value="<%= user.lastName %>"
                /> <br/>
                
                <input
                type="text"
                name="address"
                value="<%= user.address %>"
                > <br/>
                
                <input
                type="text"
                name="city"
                value="<%= user.city %>"
                > <br/>
                
                <input
                type="text"
                name="state"
                value="<%= user.state %>"
                > <br/>
                
                <input
                type="text"
                name="zipCode"
                value="<%= user.zipCode %>"
                > <br/>
                <br>
                <h4>Contact Information</h4>
                
                <input
                type="tel"
                name="phoneNumber"
                value="<%= user.phoneNumber %>"
                > <br/>
                
                <input
                type="text"
                name="email"
                value="<%= user.email %>"
                > <br/>
                <input class="button-primary" type="submit" value="Update Info" />
              </form>
        <button class="u-full-width button-primary"><a href="/user/landing">User Home</a></button>
    </div>
    <div class="one-half column" style="margin-top: 25%">
        <img src="/images/Sagittarius.png" width="400px"height="400px">
    </div>
</div>
</div>
        <%- include('./partials/footer.ejs') %>